<div class="d-flex justify-content-between align-items-center mb-4">
  <!-- Left side -->
  <h1 class="text-shadow-lg mb-0">My Properties</h1>

  <!-- Right side (two buttons) -->
  <div class="d-flex gap-2">
    <%= link_to "Add Property", new_property_path, class: "btn btn-success mb-3" %>
    <%= link_to "Back", owners_path, class: "btn btn-success mb-3" %>
  </div>
</div>


<% if @properties.any? %>
  <div class="row">
    <% @properties.each do |property| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <% if property.images.attached? %>
            <%= image_tag property.images.first, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5><%= property.name %></h5>
            <%= link_to "View", property_path(property), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_property_path(property), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", property_path(property), method: :delete, data: { confirm: "Are you sure you want to delete this property?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No properties added yet.</p>
<% end %>
