<h2>New Property</h2>

<div class="card p-4 blur-card mx-auto" style="max-width: 600px;">
  <%= form_with(model: @property, local: true, html: { multipart: true }) do |f| %>
    
    <% if @property.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@property.errors.count, "error") %> prohibited this property from being saved:</h4>
        <ul>
          <% @property.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :images, "Upload 3 Images", class: "form-label" %>
      <%= f.file_field :images, multiple: true, class: "form-control", accept: "image/*" %>
    </div>

    <div class="text-center">
      <%= f.submit "Add Property", class: "btn btn-success" %>
    </div>

  <% end %>
</div>
