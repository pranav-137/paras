<div class="container mt-5">
  <h2 class="text-center mb-4">My Bookings</h2>

  <% if @bookings.any? %>
    <table class="table table-bordered table-hover shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>Property</th>
          <% if current_user.owner? %>
            <th>Tenant</th>
          <% end %>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.property.name %></td>

            <% if current_user.owner? %>
              <td><%= booking.tenant&.name || "N/A" %></td>

            <% end %>

            <td><%= booking.start_date %></td>
            <td><%= booking.end_date %></td>
            <td><%= booking.status %></td>
            <td>
              <%= link_to "View", booking_path(booking), class: "btn btn-sm btn-primary" %>
               <%= link_to "Delete", booking_path(booking),
                  data: { turbo_method: :delete, confirm: "Are you sure?" },
                  class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center text-muted">No bookings found yet.</p>
  <% end %>
</div>

