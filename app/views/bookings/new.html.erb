<div class="card p-4 mx-auto" style="max-width: 500px;">
  <h2>Book <%= @property.name %></h2>

  <%= form_with model: [@property, @booking], url: bookings_path(property_id: @property.id), local: true do |f| %>
    <div class="mb-3">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :message, "Additional Notes" %>
      <%= f.text_area :message, class: "form-control", rows: 3 %>
    </div>

    <%= f.submit "Confirm Booking", class: "btn btn-success w-100" %>
  <% end %>
</div>
