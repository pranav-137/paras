<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Owner Documents</h2>
   <div class="d-flex gap-2">
    <%= link_to "Add New Document", new_ownerdoc_path, class: "btn btn-success" %>
  <%= link_to "Back", owners_path, class: "btn btn-secondary" %>
  </div>
</div>

<table class="table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Document_ID</th>
      <th>Name</th>
      <th>Doc Type</th>
      <th>Owner_ID</th>
      <th>Owner_Name</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @ownerdocs.each do |doc| %>
      <tr>
        <td><%= doc.id %></td>
        <td><%= doc.name %></td>
        <td><%= doc.doc_type %></td>
        <td><%= doc.owner_id %></td>
        <td><%= doc.owner.first_name %></td>
        <td><%= doc.created_at.strftime("%d-%m-%Y") %></td>
        <td>
          <%= link_to 'View', ownerdoc_path(doc), class: 'btn btn-sm btn-primary' %> 
          <%= link_to "Edit", edit_ownerdoc_path(doc), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", ownerdoc_path(doc), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
